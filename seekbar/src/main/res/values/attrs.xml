<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RangeSeekBarView">
        <attr name="stepValue" format="integer|dimension"/>
        <attr name="minValue" format="integer|dimension"/>
        <attr name="maxValue" format="integer|dimension"/>
        <attr name="currentValue" format="integer|dimension"/>
        <attr name="barHeight" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleTextSize" format="dimension" />
        <attr name="circleTextColor" format="color" />
        <attr name="baseColor" format="color" />
        <attr name="fillColor" format="color" />
        <attr name="circleFillColor" format="color" />
        <attr name="orientation" format="enum">
            <enum name="RIGHT_TO_LEFT" value="0"/>
            <enum name="LEFT_TO_RIGHT" value="1"/>
            <enum name="TOP_TO_BOTTOM" value="2"/>
            <enum name="BOTTOM_TO_TOP" value="3"/>
        </attr>

    </declare-styleable>



    <declare-styleable name="DoubleValueSeekBarView">
        <attr name="r2minValueStep" format="integer|dimension"/>
        <attr name="r2maxValueStep" format="integer|dimension"/>
        <attr name="r2maxValue" format="integer|dimension"/>
        <attr name="r2minValue" format="integer|dimension"/>
        <attr name="r2CurrentMaxValue" format="integer|dimension"/>
        <attr name="r2CurrentMinValue" format="integer|dimension"/>
        <attr name="r2barHeight" format="dimension" />
        <attr name="r2circleRadius" format="dimension" />
        <attr name="r2circleTextSize" format="dimension" />
        <attr name="r2circleTextColor" format="color" />
        <attr name="r2baseColor" format="color" />
        <attr name="r2fillColor" format="color" />
        <attr name="r2circleFillColor" format="color" />
    </declare-styleable>

</resources>