<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_20sdp"
    android:background="@drawable/bg_dialog_base"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="@dimen/_15sdp"
    android:id="@+id/rlsum"
    android:elevation="@dimen/_10sdp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF3333"
        android:textSize="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="System permission required"/>
    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/robotolight"
        android:text="MIUI-ify need to be able to modify system settings to perform this action."/>

    <RelativeLayout
        android:layout_below="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_line"
            android:text="Not now"
            android:textSize="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:fontFamily="@font/robotolight"
            android:textColor="@color/text_primary"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_primary"
            android:text="settings"
            android:textSize="@dimen/_10sdp"
            android:layout_toRightOf="@+id/btn_cancel"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/robotolight"
            android:textColor="@color/white"/>

    </RelativeLayout>
</RelativeLayout>