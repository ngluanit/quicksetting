<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".handles.HandlesActivity">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgBack"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/tvTitle"
            android:layout_height="wrap_content"
            android:text="@string/handles"
            android:layout_toRightOf="@id/imgBack"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlSwipe"
        android:layout_below="@+id/rlTop"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgSwipe"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgSwipe"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/robotolight"
            android:id="@+id/tvSwipe"
            android:layout_height="wrap_content"
            android:text="@string/swipe_upwards_to_open_the_panel_when_the_handle_is_on_the_left_or_right"
            android:layout_toRightOf="@id/imgSwipe"
            android:layout_marginLeft="@dimen/_20sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlBlackList"
        android:layout_below="@+id/rlSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgBlackList"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgBlackList"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvBlackList"
            android:layout_height="wrap_content"
            android:text="@string/blacklist"
            android:layout_toRightOf="@id/imgBlackList"
            android:layout_marginLeft="@dimen/_20sdp" />
        <TextView
            android:layout_toEndOf="@id/imgBlackList"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/tvBlackDes"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="@string/choose_apps_to_hide_the_handles_in"
            android:layout_below="@id/tvBlackList"
            android:layout_toRightOf="@id/imgBlackList"
            android:layout_marginLeft="@dimen/_20sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlFulllenght"
        android:layout_below="@+id/rlBlackList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgFullleght"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgFullleght"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvFullleght"
            android:layout_height="wrap_content"
            android:text="Full leght handle icon"
            android:layout_toRightOf="@id/imgFullleght"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnFullleght"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlHideHandle"
        android:layout_below="@+id/rlFulllenght"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgHideHandle"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgHideHandle"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvHideHandle"
            android:layout_height="wrap_content"
            android:text="@string/hide_handle_icon"
            android:layout_toRightOf="@id/imgHideHandle"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnHideHandle"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlHideFullScreen"
        android:layout_below="@+id/rlHideHandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgHideFullScreen"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgHideFullScreen"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvHideFullScreen"
            android:layout_height="wrap_content"
            android:text="@string/hide_in_fullscreen"
            android:layout_toRightOf="@id/imgHideFullScreen"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnHideFullScreen"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlHidelandscape"
        android:layout_below="@+id/rlHideFullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgHidelandscape"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgHidelandscape"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvHidelandscape"
            android:layout_height="wrap_content"
            android:text="@string/hide_in_landscape_mode"
            android:layout_toRightOf="@id/imgHidelandscape"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnHidelandscape"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlHideKeyboardOpen"
        android:layout_below="@+id/rlHidelandscape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgHideKeyboardOpen"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgHideKeyboardOpen"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvHideKeyboardOpen"
            android:layout_height="wrap_content"
            android:text="Hide while keyboard is open"
            android:layout_toRightOf="@id/imgHideKeyboardOpen"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnHideKeyboardOpen"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rlHideKeyboardOpen"/>
    <TextView
        android:id="@+id/tvBottomHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@id/line"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/bottom_handle"
        android:layout_marginLeft="@dimen/_60sdp" />
    <RelativeLayout
        android:id="@+id/rlDisableHandle"
        android:layout_below="@+id/tvBottomHandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgDisableHandle"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:layout_toEndOf="@id/imgDisableHandle"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvDisableHandle"
            android:layout_height="wrap_content"
            android:text="@string/disable_handle"
            android:layout_toRightOf="@id/imgDisableHandle"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:id="@+id/imgTurnDisableHandle"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rlDisableHandle"/>
    <RelativeLayout
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handle length"/>
    </RelativeLayout>
</RelativeLayout>