<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingStart="@dimen/_20sdp"
    android:background="@drawable/bg_dialog_base"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:layout_centerInParent="true"
    android:paddingVertical="@dimen/_20sdp"
    android:paddingLeft="@dimen/_20sdp">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF3333"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/robotolight"
        android:text="@string/tile_toggle_method"/>
    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:text="@string/select_a_method_to_toggle_secure_settings_nsuch_as_mobile_data"/>
    <RelativeLayout
        android:id="@+id/rlNormal"
        android:layout_below="@+id/tvDes"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rladb"
        android:layout_below="@+id/rlNormal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvadb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adb_root"/>
    </RelativeLayout>
</RelativeLayout>