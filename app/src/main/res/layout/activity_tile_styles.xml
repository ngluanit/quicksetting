<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tilestyle.TileStylesActivity">
    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_toEndOf="@id/imgBack"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/tvTitle"
            android:layout_height="wrap_content"
            android:text="Tiles"
            android:layout_toRightOf="@id/imgBack"
            android:layout_marginLeft="@dimen/_20sdp" />
        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_reload"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lnAble"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_below="@+id/rlTop"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgEnable"
                android:layout_width="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_wifi"
                android:tint="@color/text_primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgEnable"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:text="@string/enabled_style"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgDisable"
                android:layout_width="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_bluetooth"
                android:tint="@color/text_primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgDisable"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:text="@string/disabled_style"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnAble">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rlGradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgGradient"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_gradient" />
                <TextView
                    android:layout_toEndOf="@id/imgGradient"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvGradient"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_tile_gradients"
                    android:layout_toRightOf="@id/imgGradient"
                    android:layout_marginLeft="@dimen/_20sdp" />

                <ImageView
                    android:id="@+id/img_enable"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_switch_off" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlShape"
                android:layout_below="@+id/rlGradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgShape"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_geometry"
                    android:tint="#737373"/>
                <TextView
                    android:layout_toEndOf="@id/imgShape"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvShape"
                    android:layout_height="wrap_content"
                    android:text="@string/tile_icon_shape"
                    android:layout_toRightOf="@id/imgShape"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rlShape"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#737373"/>
            <RelativeLayout
                android:id="@+id/rlSolid"
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgSolid"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_circle" />
                <TextView
                    android:layout_toEndOf="@id/imgSolid"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvSolid"
                    android:layout_height="wrap_content"
                    android:text="@string/solid_colors"
                    android:layout_toRightOf="@id/imgSolid"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlTileBackground"
                android:layout_below="@+id/rlSolid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgTileBackground"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvTileBackground"
                    android:layout_height="wrap_content"
                    android:text="@string/tile_background_enabled"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDisables"
                android:layout_below="@+id/rlTileBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgDisables"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvDisables"
                    android:layout_height="wrap_content"
                    android:text="@string/tile_background_disabled"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlTileIcon"
                android:layout_below="@+id/rlDisables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgTileIcon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvTileIcon"
                    android:layout_height="wrap_content"
                    android:text="@string/tile_icon_enabled"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlDisableIcon"
                android:layout_below="@+id/rlTileIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgDisableIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvDisableIcon"
                    android:layout_height="wrap_content"
                    android:text="@string/tile_icon_disabled"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rlDisableIcon"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"/>
            <RelativeLayout
                android:id="@+id/rlEnableGradient"
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgEnableGradient"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_launcher_background" />
                <TextView
                    android:layout_toEndOf="@id/imgEnableGradient"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvEnableGradient"
                    android:layout_height="wrap_content"
                    android:text="@string/enabled_tile_gradient"
                    android:layout_toRightOf="@id/imgEnableGradient"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlPreset"
                android:layout_below="@+id/rlEnableGradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvPreset"
                    android:layout_height="wrap_content"
                    android:text="@string/preset_gradients"
                    android:layout_marginLeft="@dimen/_20sdp" />
                <TextView
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/tvGradientApply"
                    android:layout_below="@id/tvPreset"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_a_gradient_to_apply_it_scroll_for_more"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlPreset"/>
            <RelativeLayout
                android:id="@+id/rlColorStar"
                android:layout_below="@+id/rcvColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgColorStar"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvColorStar"
                    android:layout_height="wrap_content"
                    android:text="@string/gradient_color_start"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlColorEnd"
                android:layout_below="@+id/rlColorStar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <ImageView
                    android:id="@+id/imgColorEnd"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginStart="@dimen/_44sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:id="@+id/tvColorEnd"
                    android:layout_height="wrap_content"
                    android:text="@string/gradient_color_end"
                    android:layout_marginLeft="@dimen/_20sdp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>