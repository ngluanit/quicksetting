<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:id="@+id/rl_item"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingVertical="@dimen/_10sdp"
       android:paddingHorizontal="@dimen/_5sdp">
       <ImageView
           android:id="@+id/img_app_bl"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:src="@drawable/ic_launcher_background"/>
       <TextView
           android:id="@+id/tv_app_bl"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/img_app_bl"
           android:layout_marginRight="@dimen/_40sdp"
           android:text="Em Äƒn com chua"
           android:layout_marginLeft="@dimen/_15sdp"
           android:layout_centerVertical="true"
           android:textSize="@dimen/_12sdp"
           android:maxLines="2"
           android:fontFamily="@font/robotolight"
           android:textColor="@color/black"/>
       <ImageView
           android:id="@+id/check_bl"
           android:layout_width="@dimen/_22sdp"
           android:layout_height="@dimen/_22sdp"
           android:src="@drawable/ic_check_empty"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="@dimen/_15sdp" />
   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray1"
        android:layout_below="@+id/rl_item"/>

</RelativeLayout>